<UserControl
    x:Class="Gui.Views.NearAsteroidsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Gui.Views"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Width="auto"
    Height="auto"
    prism:ViewModelLocator.AutoWireViewModel="True"
    FontFamily="{DynamicResource MaterialDesignFont}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Margin="0,0,0,7"
            HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <materialDesign:Card
                Grid.Row="0"
                Grid.Column="0"
                Padding="10,0">
                <TextBlock
                    VerticalAlignment="Center"
                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                    Text="Find near asteroids between:" />
            </materialDesign:Card>

            <DatePicker
                Grid.Column="1"
                MinWidth="150"
                MaxWidth="200"
                Margin="10,0"
                materialDesign:HintAssist.Hint="From"
                SelectedDate="{Binding FromDate}"
                Style="{StaticResource MaterialDesignFilledDatePicker}" />

            <materialDesign:PackIcon
                Grid.Column="2"
                Width="25"
                Height="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Kind="ArrowRight" />

            <DatePicker
                Grid.Column="3"
                MinWidth="150"
                MaxWidth="200"
                Margin="10,0"
                materialDesign:HintAssist.Hint="To"
                SelectedDate="{Binding ToDate}"
                Style="{StaticResource MaterialDesignFilledDatePicker}" />

            <Button
                Grid.Column="4"
                Margin="5,0"
                HorizontalAlignment="Left"
                Command="{Binding SearchBetweenDates}"
                Style="{StaticResource MaterialDesignIconButton}">
                <materialDesign:PackIcon Kind="DatabaseSearchOutline" />
            </Button>

        </Grid>
        <materialDesign:Card Grid.Row="1">
            <TabControl
                Width="auto"
                Height="auto"
                materialDesign:ColorZoneAssist.Mode="Dark"
                materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
                SnapsToDevicePixels="True"
                Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                TabStripPlacement="Top">
                <TabItem
                    Width="auto"
                    Margin="5,0"
                    Header="Risk information">
                    <lvc:PieChart LegendPosition="Right" Series="{Binding RiskInformation}" />
                </TabItem>
                <TabItem Width="auto" Header="Relative velocity">
                    <lvc:CartesianChart Series="{Binding SpeedInfo}" />
                </TabItem>
                <TabItem Width="auto" Header="By diameter">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="5"
                            materialDesign:HintAssist.Hint="Enter diameter"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Diameter, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.InputBindings>
                                <KeyBinding
                                    Command="{Binding FilterByDiameter}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TextBox}}}"
                                    Gesture="Return" />
                            </TextBox.InputBindings>
                        </TextBox>
                        <Button
                            Grid.Row="0"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Command="{Binding FilterByDiameter}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Filter by diameter">
                            <materialDesign:PackIcon Kind="FilterList" />
                        </Button>
                        <DataGrid
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            ItemsSource="{Binding AsteroidsGreterThen}"
                            SelectedItem="{Binding SelectedAstroeid}"
                            Style="{StaticResource MaterialDesignDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="auto"
                                    Binding="{Binding Name}"
                                    Header="Name" />
                                <DataGridTextColumn
                                    Width="auto"
                                    Binding="{Binding AbsoluteMagnitudeH}"
                                    Header="Absolute Magnitude H" />
                                <!--<DataGridCheckBoxColumn Header="Potentially Hazardous?" Width="auto" Binding="{Binding IsPotentiallyHazardousAsteroid}"  />
                                <DataGridCheckBoxColumn Header="Sentry Object?" Width="auto" Binding="{Binding IsSentryObject}"  />-->
                                <DataGridTextColumn
                                    Width="auto"
                                    Binding="{Binding EstimatedDiameterMax}"
                                    Header="Estimated Diameter Max" />
                                <DataGridTextColumn
                                    Width="auto"
                                    Binding="{Binding EstimatedDiameterMin}"
                                    Header="Estimated Diameter Min" />
                                <!--<DataGridComboBoxColumn Header="Close Approachs" Width="auto" ItemsSource="{Binding CloseApproachs}"  />-->
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid
                            Grid.Row="1"
                            Grid.Column="2"
                            Width="auto"
                            AutoGenerateColumns="True"
                            ItemsSource="{Binding CloseApproach}" />
                    </Grid>
                </TabItem>
            </TabControl>
        </materialDesign:Card>

        <local:LoadingBar Grid.Row="2" IsLoading="{Binding IsLoading}" />
    </Grid>
</UserControl>
