<UserControl
    x:Class="Gui.Views.ImageOfTheDayView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Gui.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:web="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <StackPanel>
        <ItemsControl ItemsSource="{Binding Images}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="{Binding Title}" />
                        <TextBlock
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                            Text="{Binding Date, StringFormat=dd/MM/yyyy}" />
                        <Border Grid.Row="2" Width="600">
                            <StackPanel>
                                <web:ChromiumWebBrowser
                                    Grid.Row="2"
                                    Width="600"
                                    Height="350"
                                    Address="{Binding ImageUrl}" />
                                <Expander>
                                    <Expander.Header>
                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            Kind="ImageDescription"
                                            ToolTip="Description" />
                                    </Expander.Header>
                                    <TextBox
                                        MaxWidth="400"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontFamily="{StaticResource MaterialDesignFont}"
                                        FontSize="14"
                                        IsReadOnly="True"
                                        Text="{Binding Explanation}"
                                        TextWrapping="Wrap" />
                                </Expander>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button
            Width="130"
            Command="{Binding load}"
            Content="Load image" />
    </StackPanel>
</UserControl>
